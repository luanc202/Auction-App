<div class="container-md">
<h3>Cadsatrar novo Lote para Leil√£o</h3>

<% if(@auction_batch.errors.any?) %>
  <p>Verifique os erros abaixo:</p>
  <ul>
    <% @auction_batch.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @auction_batch) do |f| %>
  <div>
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>
  <div>
    <%= f.label :start_date %>
    <%= f.datetime_local_field :start_date %>
  </div>
  <div>
    <%= f.label :end_date %>
    <%= f.datetime_local_field :end_date %>
  </div>
  <div>
    <%= f.label :minimum_bid_amount %>
    <%= f.text_field :minimum_bid_amount %>
  </div>
  <div>
    <%= f.label :minimum_bid_difference %>
    <%= f.text_field :minimum_bid_difference %>
  </div>
  <%= f.submit %>
<% end %>
</div>